#!/bin/bash

modes="drun,powermenu:/home/dylan/.config/rofi/rofi-power-menu"
options="-modes \"$modes\" -display-drun Óöè"

# TODO check if polybar is toggled and offset rofi accordingly
# too lazy (lazarus), but should be pretty easy

if [ "$1" = "drun" ]; then
	rofi -show drun $options \
		-show-icons \
		-theme-str 'window { location: north; x-offset: 0px; y-offset: 21px; height: 14%; width: 20%; }'
elif [ "$1" = "powermenu" ]; then
	rofi -show powermenu $options \
		-theme-str 'window { location: north; x-offset: 17px; y-offset: 21px; height: 9%; width: 8%; }' \
		-theme-str 'inputbar { children: [ prompt,textbox-prompt-colon,case-indicator ]; enabled: false; }'
fi
