#
# wm independent hotkeys
#

# sxhkd reload config files
super + Escape
    pkill -USR1 -x sxhkd

super + shift + semicolon
    ; # install something

super + shift + period
    poweroff

super + shift + comma
    reboot

# terminal emulator
super + Return
	kitty

# added a keybind within alacritty for opening a new terminal
# with the current working directory
# super + shift + Return

super + space
    firefox

# vscode
super + v
    code

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,p,o,f}
	bspc node -t {\~tiled,\~pseudo_tiled,\~floating,\~fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local; \
    ~/.config/bspwm/workspace_notification.sh

# switch to workspace
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'; \
    ~/.config/bspwm/workspace_notification.sh

# send to workspace
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

#
# display information
#

# display current workspace number and number of (nonhidden) windows
super + z
    ~/.config/bspwm/workspace_notification.sh

#
# rotate
#

# toggle split
super + i
    bspc node @parent --rotate 90

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward (for floating)
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward (for floating)
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# resize windows from this reddit post:
# https://i3.reddit.com/r/bspwm/comments/r5stxu/resizing_windows_nicely_in_my_opinion/
super + alt + {h,j,k,l}
    {bspc node @parent/second -z left -10 0; \
    bspc node @parent/first -z right -10 0, \
    bspc node @parent/second -z top 0 +10; \
    bspc node @parent/first -z bottom 0 +10, \
    bspc node @parent/first -z bottom 0 -10; \
    bspc node @parent/second -z top 0 -10, \
    bspc node @parent/first -z right +10 0; \
    bspc node @parent/second -z left +10 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
